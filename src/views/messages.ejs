<%- include("navbar.ejs", {searchBar:false, searched: ''})%>

<div class="container-fluid">
  <div class="row justify-content-evenly">
    <div class="col-5 col-md-4 col-lg-2 msg-list-container shadow-sm">
      <input type="search" class="search-user-msg" placeholder="search..." id="search-input"/>
      <hr />
      <ul class="list-group">
        <%friendsList.forEach((friend)=>{%>
        <li
          class="list-group-item d-flex justify-content-between align-items-start msg-friend-li"
        >
          <div class="ms-2 me-auto msg-prev-body">
            <input type="hidden" name="friend_id" value="<%=friend.id%>"/>
            <div class="fw-bold friend-name"><%=friend.first_name%>(@<%=friend.username%>)</div>
           <span class="msg-prev"> last message preview...</span>
          </div>
          <span class="badge text-bg-primary rounded-pill">1</span>
        </li>
        <%});%>
      </ul>
    </div>
    
      <div class="return-btn-div d-none col-2">
        <img src="/images/turn-back.png" alt="return to message preview button" class="msg-return-btn shadow-sm"/>
      </div>
<!--add d-none to below div after adjustments-->
    <div class="col-6 col-md-7 col-lg-9 msg-container flex-column shadow-sm">
      <div class="row">
        <p class="chat-tittle">Chatting with: <span class="name-of-chatter"><b>mike(@mikejames)</b></span></p>
        <hr/>
      </div>
      <div class="row chatbox">

      </div>
      <div class="row mt-2 mb-2 p-2 msg-input-container">
        <hr />
        <div class="col-md-10 mb-2">
          <input type="text" class="text-msg" placeholder="message..." />
        </div>
        <div class="col-md-2">
          <button type="submit" id="send-txt-msg">Send</button>
        </div>
      </div>
    </div>
  </div>
</div>
