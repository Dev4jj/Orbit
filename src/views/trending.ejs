<%- include("navbar.ejs", {searchBar:false, searched: ''})%>

<div class="container">
  <div class="trends-div">
    <h1 class="trend-title">TRENDING NEWS</h1>

    <div class="accordion" id="articlesAccordion">
      <% allArticles.forEach((article, index) => {%>

      <div class="accordion-item">
        <h2 class="accordion-header" id="heading-<%=index%>">
          <button
            class="accordion-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#collapse-<%=index%>"
            aria-expanded="false"
            aria-controls="collapse-<%=index%>"
          >
            <div class="me-3 border-end pe-2 ranking">
              <p class="rank-num text-body-secondary mb-0">
                <%=index + 1%>&#10223;
              </p>
            </div>
            <div class="flex-grow-1">
              <h3 class="mb-0"><%=article.title%></h3>
            </div>
          </button>
        </h2>

        <div
          id="collapse-<%=index%>"
          class="accordion-collapse collapse"
          aria-labelledby="heading-<%=index%>"
          data-bs-parent="#articlesAccordion"
        >
          <div class="accordion-body">
            <div class="row align-itmems-stretch">
           
            <div class=" d-flex flex-column justify-content-between align-items-center">
              <p><%=article.description || "No descrition available"%></p>
              <a href="<%=article.link%>" target="_blank" class="btn btn-sm btn-light">Read More</a>
            </div>
          </div>
          </div>
        </div>
      </div>
      <%});%>
    </div>
  </div>
</div>
